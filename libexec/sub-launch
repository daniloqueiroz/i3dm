#!/usr/bin/env bash
# Usage: i3dm launch [option]
# Summary: App/file launcher & window switcher
# Help: The following options are available
# -p/pass - password store mode
# -w/window - switch window mode
# -a/app - launch app mode

set -e

source ${libs_file}

command=$1

case "$command" in
  "app" | "-a")
    i3-dmenu-desktop --dmenu="dmenu -b -i -p '>>' -nb '#0C1923' -nf '#005D69' -sb '#0C1923' -sf '#00BCD4'"
    ;;
  "pass" | "-p")
    passmenu -b -i -p '>>'  -nb '#0C1923' -nf '#005D69' -sb '#0C1923' -sf '#00BCD4'
    ;;
  "window" | "-w")
    quickswitch --dmenu="dmenu -i -p '>>' -l 3 -nb '#0C1923' -nf '#005D69' -sb '#0C1923' -sf '#00BCD4'" 
    ;;
  *)
    log_e $APP_NAME "Missing parameter: <app|pass|window>"
    ;;
esac
