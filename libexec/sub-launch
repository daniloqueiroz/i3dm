#!/usr/bin/env bash
# Usage: i3dm launch [option]
# Summary: App/file launcher & window switcher
# Help: The following options are available
# -f/file - open file mode
# -w/window - switch window mode
# -a/app - launch app mode

set -e

source ${libs_file}


rofi_cmd="rofi -config ${i3dm_rofi_conf}"

command=$1

case "$command" in
  "app" | "-a")
    ${rofi_cmd} -modi 'run,ssh' -show run
    ;;
  "file" | "-f")
    ${rofi_cmd} -modi "file:${libexec_path}/rofi-file-browser.sh" -show file
    ;;
  "window" | "-w")
    ${rofi_cmd} -modi 'window' -show window
    ;;
  *)
    log_e $APP_NAME "Missing parameter: <run|file|window>"
    ;;
esac
